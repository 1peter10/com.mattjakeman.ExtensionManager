{
    "app-id": "com.mattjakeman.ExtensionManager",
    "runtime": "org.gnome.Platform",
    "runtime-version": "42",
    "sdk": "org.gnome.Sdk",
    "command": "extension-manager",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--talk-name=org.gnome.Shell.Extensions",
        "--talk-name=org.gnome.SessionManager"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "blueprint-compiler",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler.git",
                    "commit": "87cedc2c7e48b01dc1b07aef937e2fe02111b18c",
                    "tag": "v0.2.0"
                }
            ]
        },
        {
            "name": "text-engine",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/mjakeman/text-engine.git",
                    "commit": "e2d304e0c81bf0c3138133183a139dcf3da819f1",
                    "tag": "v0.1.1"
                }
            ]
        },
        {
            "name": "extension-manager",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/mjakeman/extension-manager.git",
                    "commit": "ce75cfd14a8ed119f4769a8e124576327e540df0",
                    "tag": "v0.3.2"
                }
            ]
        }
    ]
}
