{
    "app-id": "com.mattjakeman.ExtensionManager",
    "runtime": "org.gnome.Platform",
    "runtime-version": "42",
    "sdk": "org.gnome.Sdk",
    "command": "extension-manager",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--talk-name=org.gnome.Shell.Extensions",
        "--talk-name=org.gnome.SessionManager"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "blueprint-compiler",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler.git",
                    "commit": "6576e0283757a58f92227811874406e025dbd98a"
                }
            ]
        },
        {
            "name": "text-engine",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/mjakeman/text-engine.git",
                    "commit": "379437b2b589a9414985dec9136b7b48bae76f9e",
                    "tag": "v0.1.0"
                }
            ]
        },
        {
            "name": "extension-manager",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/mjakeman/extension-manager.git",
                    "commit": "b34b18ce99700cb6612c208f42fd63587f570f77",
                    "tag": "v0.3.0"
                }
            ]
        }
    ]
}
